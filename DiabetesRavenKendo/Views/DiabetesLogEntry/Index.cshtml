@model IEnumerable<DiabetesRavenKendo.Models.DiabetesLogEntryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<ul data-role="listview" data-theme="b">
    @foreach (var item in Model) {
    <li>@Html.ActionLink(
                            string.Format("{0} {1} mg/mL"
                                        ,item.Time.ToString("g",System.Globalization.DateTimeFormatInfo.InvariantInfo)
                                        ,item.GlucoseReading.Glucose)
                            , "Details"
                            , new { id = item.Id}
                        )
    </li>
    }
</ul>
